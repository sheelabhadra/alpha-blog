<h1>Signup for Alpha Blog</h1>

<% if @user.errors.any? %>
<% end %>

<% if @user.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :username %><br/>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :email %><br/>
        <%= f.email_field :email %>
    </p>
    <p>
        <%= f.label :password %><br/>
        <%= f.password_field :password %>
    </p>
    
    <p>
        <%= f.submit "Sign up" %>
    </p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>